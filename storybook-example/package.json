{
  "name": "storybook-example",
  "description": "Storybook stories for component",
  "version": "0.9.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mosip/esignet-plugins/storybook-example"
  },
  "homepage": "http://mosip.github.io/esignet-plugins",
  "keywords": [
    "mosip",
    "sbi",
    "storybook-example-interface"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "storybook dev -p 6006",
    "storybook": "storybook dev -p 6006",
    "build": "storybook build",
    "build:react-sign-in-with-esignet": "cd ../react-sign-in-with-esignet && npm run build-storybook -- -o ../storybook-example/storybook-static/react-sign-in-with-esignet",
    "build:react-secure-biometric": "cd ../mosip-bio-device && npm run build-storybook -- -o ../storybook-example/storybook-static/react-sbi-integrator",
    "build:sign-in-with-esignet": "cd ../sign-in-with-esignet && npm run build-storybook -- -o ../storybook-example/storybook-static/sign-in-with-esignet",
    "build:secure-biometric": "cd ../secure-biometric-interface-integrator && npm run build-storybook -- -o ../storybook-example/storybook-static/secure-biometric-interface-integrator",
    "build:children": "npm run build:secure-biometric && npm run build:sign-in-with-esignet && npm run build:react-secure-biometric && npm run build:react-sign-in-with-esignet",
    "build:all": "npm run build && npm run build:children",
    "deploy": "gh-pages -d storybook-static",
    "sbook:react-sign-in-with-esignet": "cd ../react-sign-in-with-esignet && npm run storybook -- --port 6003 --no-open",
    "sbook:react-secure-biometric": "cd ../mosip-bio-device && npm run storybook -- --port 6004 --no-open",
    "sbook:sign-in-with-esignet": "cd ../sign-in-with-esignet && npm run storybook -- --port 6001 --no-open",
    "sbook:secure-biometric": "cd ../secure-biometric-interface-integrator && npm run storybook -- --port 6002 --no-open",
    "sbook-children": "npx concurrently \"npm run sbook:sign-in-with-esignet\"  \"npm run sbook:secure-biometric\" \"npm run sbook:react-sign-in-with-esignet\"  \"npm run sbook:react-secure-biometric\"",
    "sbook-parent": "npx wait-on http://localhost:6001 && npx wait-on http://localhost:6002 && npx wait-on http://localhost:6003 && npx wait-on http://localhost:6004 && npm run storybook",
    "sbook": "npx concurrently \"npm run sbook-children\" \"npm run sbook-parent\"",
    "publish": "npm run build:all && npm run deploy"
  },
  "author": "",
  "license": "MPL-2.0",
  "devDependencies": {
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-typescript": "^7.21.5",
    "@storybook/addon-essentials": "^7.0.18",
    "@storybook/addon-interactions": "^7.0.18",
    "@storybook/addon-links": "^7.0.18",
    "@storybook/blocks": "^7.0.18",
    "@storybook/manager-api": "^7.0.24",
    "@storybook/theming": "^7.0.24",
    "@storybook/web-components": "^7.0.18",
    "@storybook/web-components-webpack5": "^7.0.18",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.25",
    "gh-pages": "^5.0.0",
    "lit": "^2.7.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.18",
    "ts-loader": "^9.4.3",
    "typescript": "^4.9.5",
    "typescript-plugin-css-modules": "^5.0.1"
  }
}
